<% for i in 1..10 %>
  <div class="comment">
    <%= image_tag('64placeholder.svg', :class => 'avatar-thumbnail') %>
    <div class="comment-box">
      <span class="username">Username</span>
      <span class="ago">So long ago</span>
      <p><%= Faker::Lorem.sentence(30) %></p>
      <div class="rate-box">
        <span class="glyphicon glyphicon-thumbs-up"></span><% if rand() > 0.3 %><%= rand(1..100) %> <% end %>
        <span class="glyphicon glyphicon-thumbs-down"></span><% if rand() > 0.7 %><%= rand(1..100) %> <% end %>
        <span class="reply"> REPLY</span>
      </div>
    </div>
  </div>
<% end %>